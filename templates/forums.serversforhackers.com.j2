server {
    # Enforce the use of HTTPS
    listen 80 default_server;
    server_name {{ forums_domain }};
    return 301 https://{{ forums_domain }}$request_uri;
}

server {
    listen 443 default_server ssl;

    root /var/www/{{ forums_domain }}/public;
    index index.html index.htm;

    access_log /var/log/nginx/{{ forums_domain }}.log;
    error_log  /var/log/nginx/{{ forums_domain }}-error.log error;

    server_name {{ forums_domain }};

    charset utf-8;

    include h5bp/basic.conf;

    ssl_certificate           {{ ssl_wildcard_crt }};
    ssl_certificate_key       {{ ssl_wildcard__key }};
    include h5bp/directive-only/ssl.conf;

    location = /favicon.ico { log_not_found off; access_log off; }
    location = /robots.txt  { log_not_found off; access_log off; }

    location / {
        include proxy_params;
        proxy_pass http://127.0.0.1:8080;
    }
}
